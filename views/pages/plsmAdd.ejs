<!-- script -->
<script type="text/javascript">   

    function submitfn(){
        var formData = $("#regist").serialize();        
        var url = document.location.href;

        $.ajax({    
            cache : false,
            url : "/api/plasma/regist",
            type : 'POST', 
            data : formData, 
            success : function(data) {
                if(data.result){
                    window.location.href = "/web/plasma/list";
                }else{
                    alert(data.data);
                }
            }, // success 
    
            error : function(xhr, status) {
                console.log(JSON.stringify(xhr) + " : " + status);
            }            
        }); // $.ajax */
    }
</script>
<!-- script -->

